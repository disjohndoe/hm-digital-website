---
interface Props {
  title?: string;
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
}

const { title, class: className = '', padding = 'md' } = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-10'
};

const classes = `bg-white rounded-xl shadow-sm border border-slate-200 ${paddingClasses[padding]} ${className}`.trim();
---

<div class={classes}>
  {title && <h3 class="text-xl font-semibold text-slate-900 mb-4">{title}</h3>}
  <slot />
</div>
