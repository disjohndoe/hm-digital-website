---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/ui';
import QuoteRequestForm from '../../components/sections/QuoteRequestForm.astro';

const locale = 'en';
const t = getTranslations(locale);
---

<Layout
  title={`${t.freeAssessment.title} - HM-DIGITAL | Free Software Project Assessment`}
  description="Request a free assessment for your software project. Describe your needs and get a tailored quote for web apps, e-commerce platforms, ERP systems, or automation solutions."
  canonical="/en/free-assessment"
>

  <section class="pt-16 lg:pt-24 pb-0">
    <div class="container-custom">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-slate-900 mb-6">
          {t.freeAssessment.title}
        </h1>
        <p class="text-xl text-slate-600">
          {t.freeAssessment.subtitle}
        </p>
      </div>
    </div>
  </section>

  <QuoteRequestForm />
</Layout>
