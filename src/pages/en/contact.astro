---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/sections/ContactForm.astro';
import { getTranslations } from '../../i18n/ui';

const locale = 'en';
const t = getTranslations(locale);
---

<Layout
  title="Contact - HM-DIGITAL | Start Your Software Project"
  description="Contact HM-DIGITAL for software development in Croatia. We build web applications, webshops, ERP systems and automation. Response within 24 hours."
  canonical="/en/contact"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-slate-50 to-white py-16 lg:py-24">
    <div class="container-custom text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-slate-900 mb-6">
        {t.contact.title}
      </h1>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto">
        {t.contact.subtitle}
      </p>
    </div>
  </section>

  <!-- Contact Form -->
  <ContactForm />

  <!-- Additional Info -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-bold text-slate-900 mb-8 text-center">
          Why Choose HM-DIGITAL?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Quick Response</h3>
            <p class="text-sm text-slate-600">We respond within 24 hours</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Experience</h3>
            <p class="text-sm text-slate-600">10+ years in the industry</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-semibold text-slate-900 mb-2">Quality</h3>
            <p class="text-sm text-slate-600">Secure and maintainable code</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
